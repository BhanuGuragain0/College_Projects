{
  "id": "network_pivot",
  "name": "Network Pivoting",
  "description": "Scan internal network and identify pivot targets for lateral movement",
  "version": "1.0",
  "author": "SecureComm C2",
  "category": "discovery",
  "platform": "cross-platform",
  "risk_level": "medium",
  "requires_admin": false,
  "commands": [
    {
      "type": "exec",
      "payload": "arp -a",
      "description": "Display ARP table",
      "timeout": 30
    },
    {
      "type": "exec",
      "payload": "netstat -ano",
      "alt_payload": "netstat -tunap",
      "description": "Show network connections",
      "timeout": 60
    },
    {
      "type": "recon",
      "payload": "network_scan",
      "description": "Scan for live hosts",
      "timeout": 300
    }
  ],
  "network_discovery": {
    "arp_scan": true,
    "port_scan": true,
    "service_discovery": true
  },
  "mitre_techniques": ["T1046", "T1016", "T1021"],
