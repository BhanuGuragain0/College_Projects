# C2 Server Configuration
# Copy this file to .env and fill in your actual values

# ===== CRITICAL: Flask Secret Key =====
# Generate with: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=your-32-hex-character-secret-key-here

# ===== CRITICAL: AES-256 Encryption Key =====
# Generate with: python -c 'import os, base64; print(base64.b64encode(os.urandom(32)).decode())'
# MUST be Base64-encoded 32 bytes (256-bit)
ENCRYPTION_KEY=your-base64-encoded-32-byte-encryption-key-here

# ===== Database Configuration =====
DB_NAME=c2_server.db

# ===== Redis Configuration (for Celery) =====
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_RESULT_EXPIRES=3600

# ===== File Upload Configuration =====
UPLOAD_FOLDER=/tmp/c2_uploads
MAX_FILE_SIZE=10485760

# ===== Bot Configuration =====
BOT_CHECKIN_INTERVAL=60

# ===== Plugin Configuration =====
PLUGINS_FOLDER=server/plugins

# ===== Alert Configuration =====
ALERT_EMAIL=admin@example.com

# ===== Rate Limiting =====
RATE_LIMIT_CHECKIN=10 per minute
RATE_LIMIT_COMMAND=100 per hour
RATE_LIMIT_UPLOAD=50 per hour

# ===== Bot Configuration (for bot/bot.py) =====
C2_SERVER_URL=https://your-server-ip:5000
BOT_REQUEST_TIMEOUT=10
BOT_MAX_RETRIES=3
BOT_GROUP=default
